<template>
	<div style="background-color: #efefef;">
	<list style="height:900;">
		<div repeat="{{address_list}}" style="height:210;flex-direction: row;background-color: #fff;margin-bottom: 20;">
			<div style="width: 100;" class="choose">
				<image style="width:45;height:45;" if="{{checked}}" src="./static/webApp/image/xz_icon@3x.png"></image>
				<text style="width:45;height:45;border:2px solid #ccc;border-radius:45;" onclick="check($index)" if="{{unchecked}}"></text>
			</div>
			<div style="flex-direction: column;width:550;">
				<div style="flex-direction: row;margin-top: 50;">
					<text style="margin-right: 75;font-size:23;font-weight: bold;line-height: 35;">收件人:{{name}}</text>
					<text style="font-size:23;font-weight: bold;line-height: 35;margin-right: 18;">{{phone}}</text>
					<text class="default" if="{{default}}">默认</text>
				</div>
				<text style="color:#999;font-size:23;margin-top: 15;">收货地址: {{detail_address}}</text>
			</div>
			<div class="edit">
				<image style="width:45;height:45;" src="./static/webApp/image/bj_icon@3x.png" onclick="edit" id="edit_address" address_id="{{address_id}}"></image>
			</div>
		</div>
		<div style="position: fixed;bottom:240;left:120;flex-direction: row;justify-content: center;">
			<text onclick="save" class="btn">添加地址</text>
		</div>
	</div>
	</list>
</template>
<style>
	.default{
		background-color: #f15d31;
		color:#fff;	
		width:90;
		height:35;
		line-height: 35;
		text-align: center;
		border-radius: 5;
		font-size:24;
	}
	.btn{
		width: 530;
		height: 90;
		line-height: 90;
		color:#fff;
		background-color: #ff555f;
		text-align: center;
		border-radius: 45;
	}
	.edit{
		flex-direction:column;
		justify-content:center;
		width:120;
		height:120;
		border-left:2px solid #ccc;
		margin-top:40;
		padding-left:20;
	}
	.choose{
		flex-direction:column;
		justify-content:center;
		height:120;
		margin-top:40;
		padding-left:20;
	}
</style>
<script>


  function getBaseUrl(dir,page){
    var dirs = dir.split('/');
    dirs.forEach(function(dir, index) {
      if (!dir) dirs.splice(index, 1);
    });
    var root = dirs.length > 0 ? dirs[0] : '';
    var subRoot = dirs.length > 1 ? dirs.slice(1).join('/') + '/' : '';

    //return './index.html?page=./' + root + '/' + subRoot;
    return "?page=./"+ root + '/' + subRoot + page;
}

var modal = require('@weex-module/modal');
function log(arg1){
  modal.alert({
    message: arg1,
    okTitle: "OK"
    }, function() {
    // TODO after the alert is complete.
  })
}

// 本地存储
var storage = "undefined"!== typeof window ? window.localStorage : require('@weex-module/storage');
// 跳转
var navigator = require('@weex-module/navigator');


var apiUrl= "http://121.43.182.174:8080/";
var storageObj;


  module.exports = {

  	 data: {
  	 	root:"static/webApp/view",
  	 	doc_name:["order.js","address/editAddress.js","address/addAddress.js"],
	    address_list:[{
	        name:"",
	        phone:1,
	        address_id:11,
	        default:1,
	        checked:1,
	        unchecked:0,
	        detail_address:""
	      }]
	    },
        created: function () {
        	var that = this;

        	storage.getAllKeys(function(e){
        	  	var arr = e.data,
        	    	count = 0;
				function over(ret){
					storageObj = ret;
					that._getData();
				}
				var values={};
				arr.forEach(function(key){
					storage.getItem(key,function(e){
						values[key] = e.data;
						count++;
						if(count === arr.length){
							over(values);
						}
					});
        	  	});
        	});
         
         
        },
        methods: {
        _getData:function(){
    		var that=this,
        			stream=__weex_require__('@weex-module/stream');
        		stream.fetch({
        			method:"get",
        			url: apiUrl + "address/list?memberToken="+ storageObj.memberToken,
        			type:"json"
        		},function(response){
    				 if(response.status == 200){
                      //这里需要兼容web和Native，Native需要将传递的数据JSON化
                      var data = response.data;
                      try{
                        data = JSON.parse(response.data); 
                      }catch(e){}
                                                        
                      if(data){
                  		//debugger;
                        var obj = data.data,list=[]; 

			   			obj.forEach(function(value,index){
			   				var address={
			   						name:value.addressee,
			   						phone:value.mobile,
			   						address_id:value.id,
			   						default:value.isDefault,
			   						checked:value.isDefault,
			   						unchecked:!value.isDefault,
			   						detail_address:value.proviceName+value.cityName+value.countyName+value.detail
			   					};
			   					//debugger
			   				list.push(address);
			   				that.address_list=list;
			   				//debugger
			   			});
                      }else{
                       //TODO:
                      }
                    }else{
                        //TODO:错误处理
                    }
                },function(err){
                    //TODO:错误处理
        		});        		
        	},
        	check:function($index){
        		var that=this;
        		this.address_list.forEach(function(value,index,arr){
        			if(index===$index){
        				value.unchecked=!value.unchecked;
        				value.checked=!value.checked;
        			}
        			else if(!!value.checked){
        				value.unchecked=!value.unchecked;
        				value.checked=!value.checked;
        			}
        			//arr.forEach();
        		});
        	},
            join:function(){
            	require('@weex-module/event').openURL(this.jump());
            },
            //编辑
            edit:function(e){
            	var address_id=e.target.attr.address_id;

            	storage.setItem('AddressId',address_id, function(){});

            	var params = {
            		url: this.jump(1),
            		animated: 'true'
            	}
            	navigator.push(params, function(){});
            },
            //新增
            save:function(){
            	//require('@weex-module/event').openURL(this.jump(2));
            	var params = {
            		url: this.jump(2),
            		animated: 'true'
            	}
				require('@weex-module/navigator').push(params, function(){});
            },
            jump: function(index){
            	if(this.$getConfig().env.paltform === 'Web'){
            		return baseUrl + getBaseUrl(this.root,this.doc_name[index]);
            	}else{
            		var baseUrl = 'http://192.168.1.31:12580/';
            		return baseUrl + this.root +  '/' + this.doc_name[index];
            	}
		        
		        //console.log(base + this.pages[page].name + '.js');
	        } 
        }
  };
</script>
